{
  "name": "neuroshield-monitor",
  "version": "1.0.0",
  "description": "Advanced security monitoring system with AI-powered threat detection",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "set ELECTRON_ENABLE_LOGGING=1 && electron . --inspect",
    "build": "electron-builder"
  },
  "author": "NeuroShield Team",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.7",
    "electron": "^28.0.0",
    "electron-store": "^8.2.0",
    "node-windows": "^1.0.0-beta.8",
    "nodemailer": "^6.10.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.neuroshield.monitor",
    "productName": "NeuroShield Monitor",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
